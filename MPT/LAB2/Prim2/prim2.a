START: 
JMP LOAD ;переход к программе
ORG 2100H;директива размещения программы с адреса 2100
LOAD: 
MOV R2, #4
MOV R0,#0X42 ;загрузка в R0 указателя данных
MOV @R0,#0XFF ;запись в память числа 
INC R0 ;инкремент указателя
MOV @R0,#0X21 ;запись в память числа
INC R0 ;инкремент указателя
MOV @R0,#0XFF ;запись в память числа
MOV R1, #0X48
MOV @R1, #0XFA
INC R1 ;инкремент указателя
MOV @R1,#0X05 ;запись в память числа 
INC R1 ;инкремент указателя
MOV @R1,#0XFA ;запись в память числа 
CLR C ;сброс переноса
LOOP:
MOV A, @R0 ;загрузка в A текущего байта первого
;слагаемого
ADDC A, @R1 ;сложение байтов с учетом переноса
MOV @R0, A ;размещение байта результата
DEC R0 ;продвижение указателей
DEC R1
DJNZ R2, LOOP ;цикл, если не все байты просуммированы
END